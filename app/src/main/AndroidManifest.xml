<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.kev.notekeeper">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.kev.notekeeper.NoteActivity"
            android:label="Edit Note"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.kev.notekeeper.NoteListActivity"
            android:label="NoteKeeper"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity
            android:name="com.kev.notekeeper.ItemsActivity"
            android:label="@string/title_activity_items"
            android:theme="@style/AppTheme.NoActionBar"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>